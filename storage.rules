rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Products images
    match /products/{productId}/{allPaths=**} {
      // Anyone can read product images
      allow read: if true;
      
      // Only authenticated admins can upload/delete
      allow write: if request.auth != null;
    }

    // Blog images
    match /blog/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
