rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // =========================
    // Admin collection rules
    // =========================
    match /admins/{adminId} {

      // Super admins can read & write all admin docs
      allow read, write: if request.auth != null &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid))
          .data.role == 'super_admin';

      // Any user can read admin docs (needed for checkout notifications)
      allow read: if true;

      // Admins & super admins can write
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid))
          .data.role in ['super_admin', 'admin'];
    }

    // =========================
    // Products collection rules
    // =========================
    match /products/{productId} {

      // Public read access
      allow read: if true;

      // Admins can fully manage products
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid))
          .data.role in ['super_admin', 'admin'];

      // Customers (and guests) can only decrease stock during checkout
      allow update: if 
        request.resource.data.diff(resource.data)
          .affectedKeys().hasOnly(['stock']) &&
        request.resource.data.stock < resource.data.stock;

      // Anyone can increment view count
      allow update: if 
        request.resource.data.diff(resource.data)
          .affectedKeys().hasOnly(['views']) &&
        request.resource.data.views > resource.data.views;
    }

    // =========================
    // Categories collection rules
    // =========================
    match /categories/{categoryId} {

      // Public read access
      allow read: if true;

      // Only admins can write
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid))
          .data.role in ['super_admin', 'admin'];
    }

    // =========================
    // Blog Posts collection rules
    // =========================
    match /blog_posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid))
          .data.role in ['super_admin', 'admin'];
    }

    // =========================
    // Orders collection rules
    // =========================
    match /orders/{orderId} {

      // Anyone can create orders
      allow create: if true;

      // Admins can fully manage orders
      allow read, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid))
          .data.role in ['super_admin', 'admin'];

      // Customers can read & delete their own orders
      allow read, delete: if request.auth != null &&
        request.auth.uid == resource.data.userId;
    }

    // =========================
    // Reviews collection rules
    // =========================
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
      
      // Allow users to update/delete their own reviews
      allow update, delete: if request.auth != null &&
        resource.data.userId == request.auth.uid;
      
      // Allow admins to update/delete any review (for moderation)
      allow update, delete: if isAdmin();
    }

    // =========================
    // Notifications collection rules
    // =========================
    match /notifications/{notificationId} {
      // Allow users to read their own notifications
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        (resource.data.recipientRole == 'admin' && isAdmin())
      );

      // Allow users to create notifications for themselves
      // Allow admins to create notifications for anyone
      // Allow public to create notifications for admins (e.g., contact form)
      allow create: if (request.auth != null && request.resource.data.userId == request.auth.uid) ||
                       (request.resource.data.recipientRole == 'admin') ||
                       isAdmin();

      // Allow users to update their own notifications (mark as read)
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;

      // Allow admins to update/delete any notification
      allow update, delete: if isAdmin();
    }

    // Messages (Contact Form)
    match /messages/{messageId} {
      // Allow anyone to create a message (public contact form)
      allow create: if true;

      // Only admins can read, update, or delete messages
      allow read, update, delete: if isAdmin();
    }

    // =========================
    // Wishlists collection rules
    // =========================
    match /wishlists/{userId}/items/{itemId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // =========================
    // Users collection rules
    // =========================
    match /users/{userId} {
      allow read, write: if request.auth != null &&
        request.auth.uid == userId;
    }

    // =========================
    // Settings collection rules
    // =========================
    match /settings/{settingId} {
      allow read: if true;
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid))
          .data.role in ['super_admin', 'admin'];
    }

    // =========================
    // Helper Functions
    // =========================
    function isAdmin() {
      return request.auth != null &&
        get(/databases/$(database)/documents/admins/$(request.auth.uid))
          .data.role in ['super_admin', 'admin'];
    }

    // =========================
    // Default deny
    // =========================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
